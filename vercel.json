{
    "version": 2,
    "builds": [
        {
            "src": "BE/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "FE/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/BE/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/FE/assets/$1"
        },
        {
            "src": "/(.*)\\.(.*)",
            "dest": "/FE/$1.$2"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}